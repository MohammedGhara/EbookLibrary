@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Dashboard</title>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">
    <style>
        /* General body styling */
        body {
            font-family: 'Roboto', sans-serif;
            margin: 0;
            padding: 0;
            background: linear-gradient(135deg, #2c3e50, #4ca1af);
            color: #fff;
        }

        /* Header styling */
        .header {
            background-color: #34495e;
            color: white;
            padding: 20px;
            text-align: center;
            position: relative;
        }

        .header h1 {
            margin: 0;
            font-size: 2.5rem;
            font-weight: bold;
        }

        .back-to-home {
            position: absolute;
            top: 20px;
            left: 20px;
            display: flex;
            align-items: center;
            text-decoration: none;
            background-color: #34495e;
            color: white;
            padding: 10px 15px;
            border-radius: 5px;
            font-size: 0.9rem;
            font-weight: bold;
            transition: background-color 0.3s ease;
        }

        .back-to-home:hover {
            background-color: #2c3e50;
        }

        .back-to-home img {
            width: 20px;
            margin-right: 10px;
        }

        /* Main container */
        .container {
            max-width: 1200px;
            margin: 50px auto;
            padding: 20px;
            display: flex;
            flex-direction: column;
            align-items: center;
        }

        /* Card container */
        .card-container {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
            gap: 20px;
            width: 100%;
        }

        /* Individual card styling */
        .card {
            background: white;
            border-radius: 10px;
            padding: 20px;
            box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.1);
            text-align: center;
            transition: transform 0.3s ease, box-shadow 0.3s ease;
            color: #333;
            cursor: pointer;
        }

        .card:hover {
            transform: scale(1.05);
            box-shadow: 0px 6px 15px rgba(0, 0, 0, 0.2);
        }

        .card i {
            font-size: 3rem;
            margin-bottom: 15px;
            color: #4ca1af;
        }

        .card h3 {
            font-size: 1.5rem;
            margin-bottom: 10px;
        }

        .card p {
            font-size: 1rem;
            margin-bottom: 15px;
        }

        .card button {
            background: #4ca1af;
            color: white;
            border: none;
            padding: 10px 20px;
            border-radius: 5px;
            font-size: 0.9rem;
            transition: background 0.3s ease, transform 0.2s ease;
        }

        .card button:hover {
            background: #357f91;
            transform: scale(1.1);
        }

        /* Footer styling */
        .footer {
            background-color: #34495e;
            color: white;
            text-align: center;
            padding: 20px 0;
            margin-top: 50px;
        }

        .footer a {
            color: #1abc9c;
            text-decoration: none;
            margin: 0 10px;
        }

        .footer a:hover {
            text-decoration: underline;
        }

      
    </style>
</head>
<body>
    <header class="header">
        <h1>Admin Dashboard</h1>
        <a href="/" class="back-to-home">
            <img src="https://cdn-icons-png.flaticon.com/512/1946/1946488.png" alt="Home Icon">
            Back to Home
        </a>
    </header>

    <div class="container">
        <div class="card-container">
            <!-- Manage Books -->
            <div class="card" onclick="window.location.href='/Admin/ManageBooks'">
                <i class="fas fa-book"></i>
                <h3>Manage Books</h3>
                <p>View and manage all books in the system.</p>
            </div>

            <!-- Waiting List -->
            <div class="card" onclick="window.location.href='/Admin/ManageWaitingList'">
                <i class="fas fa-clock"></i>
                <h3>Waiting List</h3>
                <p>Manage waiting lists and monitor queues.</p>
            </div>

            <!-- Book Gallery -->
            <div class="card" onclick="window.location.href='/Admin/BookGallery'">
                <i class="fas fa-images"></i>
                <h3>Book Gallery</h3>
                <p>Explore and update the book gallery.</p>
            </div>

            <!-- Manage Users -->
            <div class="card" onclick="window.location.href='/Admin/ManageUsers'">
                <i class="fas fa-users"></i>
                <h3>Manage Users</h3>
                <p>Monitor and manage user accounts.</p>
            </div>
        </div>
    </div>

    <footer class="footer">
        <p>&copy; 2025 Online Library System. All rights reserved.</p>
        <a href="#">Home</a> | <a href="#">Help</a> | <a href="#">Contact</a>
    </footer>
</body>
</html>
