@{
    Layout = null;
}
@model IEnumerable<OnlineLibrary.Models.Book>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Manage Books</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            background: linear-gradient(135deg, #232526, #414345, #2C3E50, #0f2027);
            margin: 0;
            padding: 20px;
        }

        .container {
            background: #fff;
            padding: 20px;
            border-radius: 10px;
            box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.2);
            max-width: 1200px;
            margin: 50px auto;
        }

        h1 {
            color: #333;
            text-align: center;
        }

        table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 20px;
        }

        th, td {
            padding: 10px;
            border: 1px solid #ddd;
            text-align: center;
        }

        th {
            background-color: #f4f4f4;
        }

        .actions button {
            margin: 5px;
            padding: 10px;
            font-size: 14px;
            cursor: pointer;
            border: none;
            border-radius: 5px;
        }

        .add-book {
            margin-top: 20px;
            display: inline-block;
            padding: 10px 15px;
            background-color: #6a89cc;
            color: #fff;
            text-decoration: none;
            border-radius: 5px;
        }

            .add-book:hover {
                background-color: #4a69bd;
            }

        .discounted-price {
            color: green;
            font-weight: bold;
        }

        .original-price {
            text-decoration: line-through;
            color: red;
        }
    </style>
</head>
<body>
    <div class="container">
        <h1>Manage Books</h1>
        <a href="/Admin/AddBook" class="add-book">Add New Book</a>
        <a href="/Admin/Admin1" class="add-book">Back to Dashboard</a>
        <table>
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Title</th>
                    <th>Author</th>
                    <th>Price</th>
                    <th>Borrow Price</th>
                    <th>Discount</th>
                    <th>Copies Available</th>
                    <th>Copies Available To Rent</th>
                    
                  
                    <th>Genre</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var book in Model)
                {
                    <tr>
                        <td>@book.BookID</td>
                        <td>@book.Title</td>
                        <td>@book.Author</td>
                        <td>
                            @if (book.Discount.HasValue && book.Discount > 0)
                            {
                                <span class="original-price">$@book.Price</span>

                                <br />
                                <span class="discounted-price">$@(book.Price - (book.Price * (book.Discount.Value / 100)))</span>
                            }
                            else
                            {
                                @book.Price
                            }
                        </td>
                        <td>$@book.BorrowPrice</td>
                        <td>@(book.Discount.HasValue ? book.Discount + "%" : "No Discount")</td>
                        <td>@book.CopiesAvailable</td>
                        <td>@book.CopiesAvailableRent</td>
                     

                        <td>@book.Genre</td>
                        <td class="actions">
                            <a href="/Admin/EditBook?id=@book.BookID">
                                <button style="background-color: #6a89cc; color: #fff;">Edit</button>
                            </a>
                            <form method="post" action="/Admin/DeleteBook" style="display:inline;">
                                <input type="hidden" name="id" value="@book.BookID" />
                                <button style="background-color: #e74c3c; color: #fff;" onclick="return confirm('Are you sure you want to delete this book?');">
                                    Delete
                                </button>
                            </form>
                        </td>
                    </tr>
                }
                @* Ensure this line ends the foreach loop *@
            </tbody>
        </table>
    </div>
</body>
</html>


