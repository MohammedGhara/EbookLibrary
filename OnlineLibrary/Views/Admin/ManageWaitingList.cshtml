@{
    Layout = null;
}
@model IEnumerable<OnlineLibrary.Models.WaitingList>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Waiting List</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            background: linear-gradient(135deg, #232526, #414345, #2C3E50, #0f2027);
            margin: 0;
            padding: 20px;
        }

        .container {
            background: #fff;
            padding: 20px;
            border-radius: 10px;
            box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.2);
            max-width: 800px;
            margin: 50px auto;
        }

        h1 {
            color: #333;
            text-align: center;
        }

        table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 20px;
        }

        th, td {
            padding: 10px;
            border: 1px solid #ddd;
            text-align: center;
        }

        th {
            background-color: #f4f4f4;
        }

        .add-book {
            margin-top: 20px;
            display: inline-block;
            padding: 10px 15px;
            background-color: #6a89cc;
            color: #fff;
            text-decoration: none;
            border-radius: 5px;
        }

            .add-book:hover {
                background-color: #4a69bd;
            }

        .action-button {
            background-color: #4CAF50; /* Green */
            color: white;
            padding: 10px 20px;
            border: none;
            border-radius: 5px;
            cursor: pointer;
        }

            .action-button:hover {
                background-color: #45a049;
            }

        .action-button-red {
            background-color: #f44336; /* Red */
            color: white;
            padding: 10px 20px;
            border: none;
            border-radius: 5px;
            cursor: pointer;
        }

            .action-button-red:hover {
                background-color: #d32f2f;
            }
    </style>
</head>
<body>
    <div class="container">
        <h1>Waiting List</h1>
        <a href="/Admin/Admin1" class="add-book">Back To Dashboard</a>
        <table>
            <thead>
                <tr>
                    <th>#</th>
                    <th>BookID</th>
                    <th>Author</th>
                    <th>TitleBook</th>
                    <th>Username</th>
                    <th>Email</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var waitingList in Model)
                {
                    // Check if the book has available copies
                    var buttonColor = waitingList.CopiesAvailableRent > 0 ? "action-button" : "action-button-red";
                    var alertMessage = waitingList.CopiesAvailableRent > 0
                    ? "This book is available, but assignment is now done automatically."
                    : "This book is not available for assignment.";
                    <tr>
                        <td>@waitingList.ID</td>
                        <td>@waitingList.BookId</td>
                        <td>@waitingList.Author</td>
                        <td>@waitingList.TitleBook</td>
                        <td>@waitingList.Username</td>
                        <td>@waitingList.Email</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</body>
</html>
