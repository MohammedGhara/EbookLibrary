@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    body {
        background: linear-gradient(135deg, #232526, #414345, #2C3E50, #0f2027);
        min-height: 100vh;
        font-family: Arial, sans-serif;
    }

    .form-wrapper {
        max-width: 400px;
        margin: 100px auto;
        background-color: #2f3640;
        padding: 30px;
        border-radius: 15px;
        box-shadow: 0 8px 16px rgba(0,0,0,0.3);
        color: white;
    }

        .form-wrapper h2 {
            text-align: center;
            margin-bottom: 20px;
            color: #fbc531;
        }

    .form-group label {
        font-weight: bold;
    }

    .form-control {
        border-radius: 8px;
    }

    .btn-warning {
        background-color: #fbc531;
        border: none;
    }

        .btn-warning:hover {
            background-color: #e1a600;
        }
</style>

<div class="form-wrapper">
    <h2>Forgot Password</h2>

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger">
            @TempData["ErrorMessage"]
        </div>
    }

    <form method="post" asp-controller="Customer" asp-action="SendResetLink">
        <div class="form-group">
            <label>Username:</label>
            <input type="text" name="username" class="form-control" required placeholder="Your Username" />
        </div>
        <div class="text-center mt-4">
            <button type="submit" class="btn btn-warning w-100">Send Reset Link</button>
        </div>
    </form>
</div>
