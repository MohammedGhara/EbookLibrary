@{
    Layout = null;
}


<!DOCTYPE html>
<html lang="en">
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Login</title>
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        /* General styling for the body */
        body {
            margin: 0;
            font-family: Arial, sans-serif;
            background: linear-gradient(135deg, #232526, #414345, #2C3E50, #0f2027);
            height: 100vh;
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            
        }

        /* Navbar styling */
        .navbar {
            width: 100%;
            background-color: #fff;
            box-shadow: 0px 4px 6px rgba(0, 0, 0, 0.1);
            padding: 10px 20px;
            display: flex;
            justify-content: space-between;
            align-items: center;
            position: fixed;
            top: 0;
            z-index: 1000;
        }

            .navbar .library-name {
                font-size: 18px;
                font-weight: bold;
                color: #6a89cc;
            }

            .navbar .nav-links a {
                text-decoration: none;
                font-size: 16px;
                font-weight: bold;
                color: #333;
                padding: 10px 15px;
                border-radius: 5px;
            }

                .navbar .nav-links a:hover {
                    background-color: #6a89cc;
                    color: white;
                }

        /* Container for the login form */
        .login-container {
            width: 350px;
            padding: 20px;
            background-color: #fff;
            border-radius: 15px;
            box-shadow: 0px 8px 15px rgba(0, 0, 0, 0.2);
            text-align: center;
            margin-top: 80px; /* Adjust for the fixed navbar */
        }

            /* Form header styling */
            .login-container h2 {
                margin: 0;
                margin-bottom: 15px;
                font-size: 24px;
                color: #333;
            }

            .login-container p {
                font-size: 14px;
                color: #777;
                margin-bottom: 20px;
            }

        /* Input styling */
        .form-group {
            margin-bottom: 15px;
            text-align: left;
        }

            .form-group label {
                display: block;
                font-size: 14px;
                color: #555;
                margin-bottom: 5px;
            }

            .form-group input {
                width: 80%;
                padding: 10px;
                border: 1px solid #ddd;
                border-radius: 8px;
                font-size: 14px;
                outline: none;
            }

                .form-group input:hover {
                    border-color: #6a89cc;
                }

        /* Login button */
        .login-container input[type="submit"] {
            width: 100%;
            padding: 12px;
            background-color: #6a89cc;
            color: #fff;
            border: none;
            border-radius: 8px;
            cursor: pointer;
            text-transform: uppercase;
            font-size: 14px;
            margin-bottom: 10px;
        }

            .login-container input[type="submit"]:hover {
                background-color: #4a69bd;
            }

        /* Forgot password link */
        .forgot-password {
            font-size: 12px;
            color: #6a89cc;
            text-decoration: none;
            display: block;
            margin-bottom: 10px;
        }

            .forgot-password:hover {
                text-decoration: underline;
            }

        /* Sign-up link */
        .signup-link {
            font-size: 14px;
        }

            .signup-link a {
                color: #6a89cc;
                text-decoration: none;
                font-weight: bold;
            }

                .signup-link a:hover {
                    text-decoration: underline;
                }

        .back-home-btn {
            position: absolute;
            top: 20px;
            left: 20px;
            padding: 10px 20px;
            background: linear-gradient(135deg, #ff9a9e, #fad0c4);
            color: #232526;
            text-decoration: none;
            font-weight: bold;
            border-radius: 8px;
            box-shadow: 0 4px 8px rgba(0,0,0,0.2);
            transition: all 0.3s ease;
            font-family: Arial, sans-serif;
        }

            .back-home-btn:hover {
                background: linear-gradient(135deg, #fad0c4, #ff9a9e);
                transform: scale(1.05);
                box-shadow: 0 6px 12px rgba(0,0,0,0.3);
            }

        .login-header {
            text-align: center;
            margin-bottom: 40px;
        }

        .glow-title {
            font-size: 48px;
            font-weight: bold;
            color: #ffcc80;
            margin-bottom: 20px;
            text-shadow: 0 0 10px #ffcc80, 0 0 20px #ffcc80;
        }

        .glow-buttons {
            display: flex;
            justify-content: center;
            gap: 20px;
        }

        .glow-btn {
            padding: 10px 25px;
            border-radius: 30px;
            background-color: #1e1e2f;
            color: #ffcc80;
            font-weight: bold;
            font-size: 18px;
            text-decoration: none;
            border: none;
            box-shadow: 0 0 15px #8e44ad;
            transition: all 0.3s ease;
        }

            .glow-btn:hover {
                background-color: #2c2c3e;
                box-shadow: 0 0 25px #8e44ad, 0 0 40px #9b59b6;
                color: white;
            }

    </style>
</head>
<body>

    <div class="login-header">
        <h1 class="glow-title">Library</h1>
        <div class="glow-buttons">
            <a href="/HomePage" class="glow-btn">Home</a>
        </div>
    </div>

    <!-- Login Form -->
    <div class="login-container">
        <h2>Welcome Back</h2>
        <!-- Display Error Message -->
        @if (ViewData["ErrorMessage"] != null)
        {
            <div class="error-message">
                @ViewData["ErrorMessage"]
            </div>
        }

       

        <form action="/Customer/Login" method="post">
            <div class="form-group">
                <label for="username">Username:</label>
                <input id="firstname" name="FirstName" type="text" required placeholder="Enter your username" />
            </div>
            <div class="form-group">
                <label for="password">Password:</label>
                <input id="password" name="password" type="password" required placeholder="Enter your password" />
            </div>
            <a href="/Customer/ForgotPassword">Forgot your password?</a>

            <input type="submit" value="Login" />
        </form>
     

        <div class="signup-link">
            Don’t have an account? <a href="/Customer/SignUp">Sign Up</a>
        </div>
    

    </div>
</body>
</html>
